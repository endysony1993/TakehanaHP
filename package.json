{
  "name": "my-react-ts-vite-app",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build:gh": "npm --prefix client run build:gh",
    "deploy:gh": "npm --prefix client run build:gh && node scripts/deploy-gh.cjs",
    "dev": "npm-run-all -p dev:client dev:server",
    "dev:client": "npm --prefix client run dev",
    "dev:server": "npm --prefix server run dev",
    "build": "npm --prefix client run build && npm --prefix server run build"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "gh-pages": "^6.3.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@types/react-icons": "^2.2.7",
    "framer-motion": "^12.23.24",
    "react-country-flag": "^3.1.0",
    "react-icons": "^5.5.0"
  }
}
